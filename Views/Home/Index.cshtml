@using NEWSLETTER.Models
@model Usuario
@{
    ViewData["Title"] = "Home Page";
}

<h2>Cadastro de Newsletter</h2>
<form asp-action="Cadastro" method="POST">
    <p>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome"/>
    </p>
    <p>
        <label asp-for="Email">Email:</label>
        <input asp-for="Email"/>
    </p>
    <p>
        <label asp-for="Genero">Genero:</label>
        <input type="radio" asp-for="Genero" value="M"/>Masculino
        <input type="radio" asp-for="Genero" value="F"/>Feminino
    </p>
</form>
